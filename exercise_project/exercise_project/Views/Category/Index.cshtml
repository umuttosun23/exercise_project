@using exercise_project.Models
@model List<Kategories>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="#" class="btn btn-danger" style="width:100px">Sil</a></td>
            <td><a href="#" class="btn btn-primary" style="width:100px">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="#" class="btn btn-success">Kategori Ekle</a>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
